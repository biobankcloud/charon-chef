# Var definition
CLIENT_ID=<%= @id %>

# Email definition
email=<%= node[:charon][:email] %>
# Charon flags configuration (true or false)
client.id=<%= @id %>
mount.point=
main.memory.cache=false
fsync.to.cloud=false
debug.mode=<%= node[:charon][:debug] %>

#address to listen for remote repository requests.
addr=<%= @my_ip %>:11000

# Data locally stored location definition
cache.directory=cache_<%= @id %>
local.repository.directory=cache_<%= @id %>/privateRep
remote.repository.directory=cache_<%= @id %>/remote

# Personal NameSpace id definition (if empty the system fill it with a random value when launched).
personal.namespace.id=
